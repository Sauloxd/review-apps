{
  "name": "@sxd/review-apps-action",
  "version": "0.0.1",
  "main": "dist/index.js",
  "scripts": {
    "build": "yarn build:clean && yarn build:ts && yarn build:html",
    "build:clean": "rimraf dist",
    "build:ts": "tsc -p tsconfig.json",
    "build:html": "yarn copyfiles -u 1 \"src/**/*.html\" dist",
    "dev:tmpl": "nodemon -e ts,tsx spec/template/default/index.ts"
  },
  "dependencies": {
    "@actions/core": "^1.6.0",
    "@actions/exec": "^1.1.0",
    "@actions/github": "^5.0.0",
    "@actions/io": "^1.1.1",
    "copyfiles": "^2.4.1",
    "mustache": "^4.2.0"
  },
  "devDependencies": {
    "@types/mustache": "^4.1.2",
    "@vercel/ncc": "^0.24.0",
    "eslint-config-sxd": "^1.1.2",
    "nodemon": "^2.0.4",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4"
  },
  "license": "MIT"
}
